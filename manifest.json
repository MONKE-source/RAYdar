{
  "manifest_version": 3,
  "name": "RAYdar",
  "version": "1.0.0",
  "description": "Reducing inequality",
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "action": {
    "default_title": "Click me",
    "default_popup": "./dist/popup.html"
  },
  "background": {
    "service_worker": "./src/background/background.js"
  },
  "permissions": ["storage", "activeTab", "tabs"],
  "options_page": "./dist/options.html"
}
